// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



model Organization {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users    User[]
  projects Project[]

  // Access Control
  scope3Access    Boolean @default(false)
  scope3Requested Boolean @default(false)
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  role           Role         @default(VIEWER)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Project {
  id             String       @id @default(uuid())
  name           String
  reportingYear  String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  status         ProjectStatus @default(DRAFT)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  facilities      Facility[]
  emissionSources EmissionSource[]
  versions        ProjectVersion[]
}

enum ProjectStatus {
  DRAFT
  LOCKED
}

model Facility {
  id          String   @id @default(uuid())
  name        String
  equityShare Float    @default(100)
  isCorporate Boolean  @default(false)
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  emissionSources EmissionSource[]
}

model EmissionSource {
  id                String   @id @default(uuid())
  projectId         String
  project           Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  facilityId        String
  facility          Facility @relation(fields: [facilityId], references: [id])
  
  category          String   // Enum as String to match frontend "EmissionCategory"
  description       String?
  fuelType          String?
  unit              String?
  
  // JSONB is perfect for storing the flexible monthly quantities and other dynamic fields
  // without creating 50 columns.
  monthlyQuantities Json?    // Array of 12 numbers
  
  // Calculation details
  calculationMethod String?
  factor            Float?
  factorUnit        String?
  factorSource      String?
  
  // Transport/Mobile specific
  transportMode     String?
  vehicleType       String?
  distanceKm        Float?
  weightTonnes      Float?
  
  // Metadata
  isAutoGenerated   Boolean  @default(false)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// Version management for projects (manual saves only, max 10 versions)
model ProjectVersion {
  id            String   @id @default(uuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  versionNumber Int      // Sequential version number for display
  versionName   String?  // Optional user-provided name
  dataSnapshot  Json     // Complete snapshot of sources and facilities
  
  createdAt     DateTime @default(now())
  createdBy     String?  // User ID who created this version

  @@unique([projectId, versionNumber])
  @@index([projectId])
  @@index([createdAt(sort: Desc)])
}
